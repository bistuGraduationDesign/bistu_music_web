    <!--======================================================
      JavaScript Files
    ======================================================-->
    <script src='/music/js/jquery.min.js' ></script>
    <script type="text/javascript">
    jQuery(document).ready(function($) {
      var buttonCcap = document.getElementById('ccap');
      console.log(buttonCcap);
      var change = 1;
      buttonCcap.addEventListener('click', function() {
        console.log("aaa");
        change++;
        var url = '/verificationCode/' + change;
        buttonCcap.setAttribute('src', url);
      }, false);

      var buttonSignin = document.getElementById('signin');
      buttonSignin.addEventListener('click', function() {
        console.log("aaaa");
        console.log(document.getElementById('ccapcode').value);
        $.ajax({
          type: 'POST',
          url: '/checkVerCode',
          data: {
            verCode: document.getElementById('ccapcode').value
          },
          dataType: 'json',
          success: function(res) {
            console.log(res);
            if (!!res.state) {
              $.ajax({
              type: 'POST',
              url: '/signin',
              data: {
                name: document.getElementById('name').value,
                password: document.getElementById('password').value
              },
              dataType: "json",
              success: function(res1) {
                console.log(res1);
                console.log(res1);
                if (!!res1.state) {
                  var opts = {
                    "closeButton": true,
                    "debug": false,
                    "positionClass": "toast-top-full-width",
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                  };
                  toastr.success(res1.info, "成功", opts);
                  setTimeout("window.location.href = '/music' ",3000);
                }
                if (!res1.state) {
                  var opts = {
                    "closeButton": true,
                    "debug": false,
                    "positionClass": "toast-top-full-width",
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "5000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                  };
                  toastr.error(res1.info, "失败", opts);
                  //setTimeout("window.location.href = '/signin' ",3000);
                }
                // window.location = '/signin'

              }
            });
            }
            if (!res.state) {
              var opts = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-full-width",
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
              };
              toastr.error(res.info, "失败", opts);
              //setTimeout("window.location.href = '/signin' ",3000);
            }

          }
        });

      }, false);
    })
    </script>

