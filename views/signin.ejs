    <!--======================================================
      Contact Section
    ======================================================-->
    <section id='contact' class='contact-section' >
      <div class='container' >

        <div class='section-header text-center' >
          <h2 class='wow fadeInUp' data-wow-delay='.2s' >Say Hello!</h2>
          <p class='wow fadeInUp' data-wow-delay='.4s' >Be as you were when we met ！</p>
        </div>

        <div class='row' >
          <div class='col-md-8 col-md-offset-2' >

            <form id='contact-form' name='contactForm' class='contact-form' data-toggle='validator' >




              <div class='form-group' >
                <input type='text' class='form-control wow fadeInUp' data-wow-delay='.4s' id='name' placeholder='Name' required>
                <div class='help-block with-errors' ></div>
              </div>

              <div class='form-group' >
                <input type='text' class='form-control wow fadeInUp' data-wow-delay='.5s' id='password' placeholder='Password' required>
                <div class='help-block with-errors' ></div>
              </div>

              <div class='row' >
                <div class='col-md-6' >

                  <div class='form-group' >
                    <input type='text' class='form-control wow fadeInUp' data-wow-delay='.6s' id='ccapcode' placeholder='CAPTCHA' required>
                    <div class='help-block with-errors' ></div>
                  </div>

                </div>
                <div class='col-md-2' >

                  <div class='form-group' >
                  <img id = 'ccap' src="/verificationCode/1" class='form-control-ccap wow fadeInUp' alt="刷新" data-wow-delay='.8s' class="verCodePic" required>


                  </div>

                </div>
              </div>

              <div class='form-group text-center' >
                <button id = 'signin' type='submit' class='btn-custom wow fadeInUp' data-wow-delay='1s' >
                  Sign in
                </button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </section>

