<html >
    <head>
        <meta charset="UTF-8"/>
        <title>upload</title>
        <link rel='stylesheet' type='text/css' href='/css/bootstrap.min.css' >
        <link href='/css/fileinput.min.css' media="all" rel="stylesheet" type="text/css" >
        <script src="/js/jquery-3.1.1.min.js" type="text/javascript"></script>
        <!-- <script src="//cdn.bootcss.com/jquery/3.1.1/jquery.min.js"></script> -->
        <script src="/js/fileinput.js" type="text/javascript"></script>
        <script src="/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/js/fileinput_locale_zh.js" type="text/javascript"></script>
        <style>
          .alert{
            position: fixed;
            width: 100%;
            display: none;
          }
        </style>
    </head>
    <body>
      <div class="alert alert-success" role="alert" id='alertBox-success'>Success!</div>
      <div class="alert alert-danger" role="alert" id='alertBox-danger'>Error!</div>
      <div class="container kv-main" >
            <h2>上传歌曲</h2>
            <br>
            <form id="music-info">
                <div class="form-group">
                    <h3>填写歌曲信息</h3>
                    <br>
                    <div class="form-group">
                      <label>歌曲名称</label>
                      <input type="text" class="form-control" id="text-1" name="name" placeholder="Name" required="required">
                    </div>
                    <div class="form-group">
                      <label>作者名称</label>
                      <input type="text" class="form-control" id="text-2" name="author" placeholder="Name" required="required">
                    </div>
                    <div class="form-group">
                      <label>歌曲类型</label>
                      <select class="form-control" name="type">
                        <option>摇滚</option>
                        <option>民谣</option>
                        <option>流行</option>
                      </select>
                    </div>
                </div>
            </form>
            <form enctype="multipart/form-data" method="POST" >
                <div>
                    <h3>选择歌曲文件和封面</h3>
                    <!-- <h4 style="color:red">注意！请确保文件名和上传的歌曲信息保持一致</h4> -->
                    <input id="file-1" type="file" multiple class="file" data-overwrite-initial="false" required="required">

                </div>
            </form>
            <br>
            <input id='bt1' type="button"class="btn btn-primary" value='上传'></input>
        </div>
	<script>
    function alertMsg(type,msg){
      $('#alertBox-'+type).html('<b>错误!  </b>'+msg).fadeIn('slow/400/fast').delay(2000).fadeOut('slow/400/fast');
    }

    var dataJson={};
    $('#bt1').on('click',()=>{
        let data=$("#music-info").serializeArray();
        let haveNull=false;
        data.map((e)=>{
          dataJson[e.name]=e.value;
          if(!e.value){
            haveNull=true;
          }
        });
        if(haveNull){
          alertMsg('danger','请输入全部信息');

        // }else if (!haveAud||!haveImg) {
        //   alertMsg('danger','确保文件有一个歌曲和一个封面');
        }else {
        //   $.ajax({
        //     url: '/upload',
        //     type: 'POST',
        //     dataType: 'json',
        //     data:dataJson
        //   })
        //   .done(function(res) {
        //     res.state?$('#alertBox-success').html('<b>成功!  </b>').fadeIn('slow/400/fast').delay(2000).fadeOut('slow/400/fast'):$('#alertBox-danger').html('<b>错误!  </b>'+res.info).fadeIn('slow/400/fast').delay(2000).fadeOut('slow/400/fast');
        //   })
        //   .fail(function() {
        //     $('#alertBox-danger').html('<b>错误!  </b>请重试').fadeIn('slow/400/fast').delay(2000).fadeOut('slow/400/fast');
        //   })
        //   .always(function() {
        //     console.log("complete");
        //   });
        //
        $('#file-1').fileinput('upload');
        }

    });

    function fileinputInit(id,url){
      $("#"+id).fileinput({
          uploadUrl: url,
          language: 'zh', //设置语言
          //allowedFileExtensions : ['jpg', 'png','gif'],
          //overwriteInitial: false,
          maxFileSize: 5000,
          maxFileCount: 2,
          minFileCount: 2,
          showCaption:true,
          showUpload:false,
          allowedFileTypes: ['audio','image'],
          uploadExtraData: function(previewId, index) {
              return dataJson;
          },
    	});

      $('#'+id).on('fileuploaded', function(event, data,previewId, index) {
          console.log('File fileuploaded triggered');
          console.log(data);
          $('#'+id).fileinput('reset');
      });
      $('#'+id).on('fileuploaderror', function(event,data,msg) {
          console.log('File fileuploaderror triggered');
          console.log(data);
          console.log(msg);
      });

    }

    fileinputInit("file-1","/upload-file");

	</script>
  </body>
</html>
